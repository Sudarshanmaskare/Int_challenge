class Solution {
public:
    bool cal(vector<int> &piles,int mid,int h){
        int cal=0;
        for(auto var:piles){
            cal+=ceil((double)var/mid);
        }
        if(mid==3) cout<<cal;
        return cal<=h;
    }
    int minEatingSpeed(vector<int>& piles, int h) {
      //sort(piles.begin(),piles.end());
        int l=1,high=*max_element(piles.begin(),piles.end());
        int ans=1;
        while(l<=high){
            int mid=(l+high)/2;
            //cout<<mid<<" ";
            if(cal(piles,mid,h)){
                ans=mid;
                high=mid-1;
            }
            else{
                l=mid+1;
            }
        }
        return ans;
    }
};
